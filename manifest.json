{
  "manifest_version": 2,

  "name": "Scribble",
  "description": "Annotate the internet.",
  "version": "1.0",
  "background": {
    "page" : "html/background.html"
  },

  // TODO: use logo
  "icons": {
    "16": "images/pen16.png",
    "48": "images/pen48.png",
    "128": "images/pen128.png"
  },

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["scripts/scribble.js"],
      "css": ["styles/scribble.css"]
    }
  ],

  // TODO: update to match heroku HTTPS
  "sandbox" : {
    "pages" : [
      "http://scribble.dev:3000/*",
      "http://scribble.ly/*",
      "https://scribble.ly/*"
    ]
  },

  "permissions" : {
    "background"
  }
}
